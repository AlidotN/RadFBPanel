@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using System.Threading


@{
    string lang_style = "";
    if (Thread.CurrentThread.CurrentCulture.ToString() == "en")
    {
        lang_style = "body-ltr";
    }
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@Texts.AdminPanel | @Texts.Dashboard </title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/plugins/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="../../plugins/iCheck/all.css">
    <!-- Morris chart -->
    <link rel="stylesheet" href="~/plugins/morris/morris.css">
    <!-- jvectormap -->
    <link rel="stylesheet" href="~/plugins/jvectormap/jquery-jvectormap-1.2.2.css">
    <!-- Bootstrap Color Picker -->
    <link rel="stylesheet" href="~/plugins/colorpicker/bootstrap-colorpicker.min.css">
    <!-- Date Picker -->
    <link rel="stylesheet" href="~/plugins/datepicker/datepicker3.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker-bs3.css">
    <!-- Persian Data Picker -->
    <link rel="stylesheet" href="~/dist/css/persian-datepicker.min.css">
    <!-- DataTables -->
    <link rel="stylesheet" href="~/plugins/datatables/dataTables.bootstrap4.css">
    <!-- bootstrap wysihtml5 - text editor -->
    <link rel="stylesheet" href="~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    <!-- bootstrap rtl -->
    <link rel="stylesheet" href="~/dist/css/bootstrap-rtl.min.css">
    <!-- template rtl version -->
    <link rel="stylesheet" href="~/dist/css/custom-style.css">
    <link href="~/css/jquery-confirm.min.css" rel="stylesheet" />
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/select2.min.css">

</head>

<body class="hold-transition sidebar-mini @lang_style">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand bg-info navbar-dark border-bottom">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
                </li>
            </ul>
            <div class="main-language-wrapper mr-auto">
                @if (Thread.CurrentThread.CurrentCulture.ToString() == "en")
                {
                    <a class="main-language-item active" asp-controller="Account" asp-action="ChangeLanguage" asp-route-lang="en">
                        <img src="/dist/img//Flag_USA_256.png" class="main-language-image" alt="USA" />
                        <span class="main-language-label">En</span>
                    </a>
                }
                else
                {
                    <a class="main-language-item" asp-controller="Account" asp-action="ChangeLanguage" asp-route-lang="en">
                        <img src="/dist/img//Flag_USA_256.png" class="main-language-image" alt="USA" />
                        <span class="main-language-label">En</span>
                    </a>
                }
                @if (Thread.CurrentThread.CurrentCulture.ToString() == "fa")
                {
                    <a class="main-language-item active" asp-controller="Account" asp-action="ChangeLanguage" asp-route-lang="fa">
                        <img src="/dist//img/Flag_Iran_256.png" class="main-language-image" alt="IRAN" />
                        <span class="main-language-label">فا</span>
                    </a>
                }
                else
                {
                    <a class="main-language-item" asp-controller="Account" asp-action="ChangeLanguage" asp-route-lang="fa">
                        <img src="/dist//img/Flag_Iran_256.png" class="main-language-image" alt="IRAN" />
                        <span class="main-language-label">فا</span>
                    </a>
                }

            </div>
            <!-- Right navbar links -->
            <ul class="navbar-nav ">
                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#">
                        <i class="fa fa-bell-o"></i>
                        <span class="badge badge-warning navbar-badge">0</span>
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-left">
                        <span class="dropdown-item dropdown-header">0 @Texts.Notification</span>

                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fa fa-users ml-2"></i> 0 @Texts.NewUser
                            <span class="float-left text-muted text-sm">12 ساعت</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fa fa-file ml-2"></i> 0 @Texts.NewPost
                            <span class="float-left text-muted text-sm">2 روز</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item">
                            <i class="fa fa-envelope ml-2"></i> 0 @Texts.NewFeedback
                            <span class="float-left text-muted text-sm">3 @Texts.Minute</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item dropdown-footer">@Texts.ViewAllNoti</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="LogOff" asp-controller="Account"><i class="fa fa-sign-out "></i></a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a asp-action="Index" asp-controller="Account" class="brand-link">
                <img src="~/dist/img/logo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3">
                <span class="brand-text font-weight-light">@Texts.AdminPanel</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar" style="direction: ltr">
                <div style="direction: rtl">

                    @await Component.InvokeAsync("MainInfo")

                    <!-- Sidebar Menu -->
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                            <!-- Add icons to the links using the .nav-icon class
                            with font-awesome or any other icon font library -->
                            <li class="nav-item has-treeview menu-open">
                                <a asp-action="Index" asp-controller="Account" class="nav-link active">
                                    <i class="nav-icon fa fa-dashboard"></i>
                                    <p>
                                        @Texts.Dashboard
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link">
                                    <i class="nav-icon fa fa-gear"></i>
                                    <p>
                                        @Texts.Setting
                                        <i class="right fa fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-action="settingApp" asp-controller="settings" class="nav-link">
                                            <i class="fa fa-gear nav-icon"></i>
                                            <p>@Texts.MainRadFBSetting</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="skills" class="nav-link">
                                            <i class="fa fa-trophy nav-icon"></i>
                                            <p>@Texts.Skills</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="job" class="nav-link">
                                            <i class="fa fa-suitcase nav-icon"></i>
                                            <p>@Texts.JobsCategory</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="major" class="nav-link">
                                            <i class="fa fa-graduation-cap nav-icon"></i>
                                            <p>@Texts.Majors</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="guild" class="nav-link">
                                            <i class="fa fa-bank nav-icon"></i>
                                            <p>@Texts.Guilds</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="subject" class="nav-link">
                                            <i class="fa fa-sitemap nav-icon"></i>
                                            <p>@Texts.Subjects</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="frequentlySubject" class="nav-link">
                                            <i class="fa fa-sitemap nav-icon"></i>
                                            <p>@Texts.FreQuestionsCat</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fa fa-user"></i>
                                    <p>
                                        @Texts.Users
                                        <i class="right fa fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="appUsers" class="nav-link">
                                            <i class="fa fa-info-circle nav-icon"></i>
                                            <p>@Texts.UsersData</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="inactiveUsers" asp-controller="appUsers" class="nav-link">
                                            <i class="fa fa-stop-circle nav-icon"></i>
                                            <p>@Texts.DeactivatedUsers</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="ShowAllMessages" asp-controller="appUsers" class="nav-link">
                                            <i class="fa fa-comment nav-icon"></i>
                                            <p>@Texts.UserChats</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="Group" class="nav-link">
                                    <i class="nav-icon fa fa-comments"></i>
                                    <p>
                                       @Texts.Groups
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="wordList" asp-controller="Account" class="nav-link">
                                    <i class="nav-icon fa fa-ban"></i>
                                    <p>
                                        @Texts.ForbiddenWords
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fa fa-upload"></i>
                                    <p>
                                        @Texts.UserUplods
                                        <i class="right fa fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="Post" class="nav-link">
                                            <i class="fa fa-quote-right nav-icon"></i>
                                            <p>@Texts.Posts</p>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="poster" class="nav-link">
                                            <i class="fa fa-picture-o nav-icon"></i>
                                            <p>@Texts.Posters</p>
                                        </a>
                                    </li>

                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="story" class="nav-link">
                                            <i class="fa fa-history nav-icon"></i>
                                            <p>@Texts.Stories</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="questionnaire" class="nav-link">
                                            <i class="nav-icon fa fa-tasks"></i>
                                            <p>
                                                @Texts.Questionnaires
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="question" class="nav-link">
                                            <i class="nav-icon fa fa-question"></i>
                                            <p>
                                                @Texts.Questions
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="adv" class="nav-link">
                                            <i class="nav-icon fa fa-bell"></i>
                                            <p>
                                                @Texts.EmployAdv
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="permium" class="nav-link">
                                    <i class="nav-icon fa fa-paypal"></i>
                                    <p>
                                        @Texts.PremiumPackages
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="finance" asp-controller="reports" class="nav-link">
                                    <i class="nav-icon fa fa-bar-chart"></i>
                                    <p>
                                        @Texts.FinanceWorks
                                    </p>
                                </a>
                            </li>


                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="posterTemplate" class="nav-link">
                                    <i class="nav-icon fa fa-align-justify"></i>
                                    <p>
                                        @Texts.PosterTemplates
                                    </p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="questionnaireTemplate" class="nav-link">
                                    <i class="nav-icon fa fa-align-justify"></i>
                                    <p>
                                        @Texts.QuestionnaireTemplates
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="discount" class="nav-link">
                                    <i class="nav-icon fa fa-diamond"></i>
                                    <p>
                                        @Texts.DiscountCodes
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fa fa-pie-chart"></i>
                                    <p>
                                        @Texts.Reports
                                        <i class="right fa fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-action="userReports" asp-controller="reports" class="nav-link">
                                            <i class="fa fa-user-o nav-icon"></i>
                                            <p>@Texts.UsersReports</p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="financeReports" asp-controller="reports" class="nav-link">
                                            <i class="fa fa-money nav-icon"></i>
                                            <p>@Texts.FinanceReport</p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item has-treeview">
                                <a href="#" class="nav-link">
                                    <i class="nav-icon fa fa-headphones"></i>
                                    <p>
                                        @Texts.ContactWithUsers
                                        <i class="right fa fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="notification" class="nav-link">
                                            <i class="nav-icon fa fa-commenting"></i>
                                            <p>
                                                @Texts.Notification
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="usersQuestions" class="nav-link">
                                            <i class="nav-icon fa fa-question-circle"></i>
                                            <p>
                                                @Texts.UsersQuestions
                                            </p>
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a asp-action="Index" asp-controller="suggestion" class="nav-link">
                                            <i class="nav-icon fa fa-bug"></i>
                                            <p>
                                                @Texts.Crit_Sug
                                            </p>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="frequently" class="nav-link">
                                    <i class="nav-icon fa fa-repeat"></i>
                                    <p>
                                        @Texts.FrequentlyQuestions
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="UserAccessList" asp-controller="Account" class="nav-link">
                                    <i class="nav-icon fa fa-level-down"></i>
                                    <p>
                                        @Texts.Access
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="UserList" asp-controller="Account" class="nav-link">
                                    <i class="nav-icon fa fa-tasks"></i>
                                    <p>
                                        @Texts.AdminPanelUsers
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="Index" asp-controller="PanelActivities" class="nav-link">
                                    <i class="nav-icon fa fa-binoculars"></i>
                                    <p>
                                        @Texts.UserActivities
                                    </p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a asp-action="LogOff" asp-controller="Account" class="nav-link">
                                    <i class="nav-icon fa fa-sign-out"></i>
                                    <p>
                                        @Texts.Quit
                                    </p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <!-- /.sidebar-menu -->
                </div>
            </div>
            <!-- /.sidebar -->
        </aside>


        <!-- Main content  body -->
        @RenderBody()
        <!-- /.content -->
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>CopyLeft &copy; 2018 <a href="#">@Texts.RadFB</a>.</strong>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- jQuery UI 1.11.4 -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->
    <script>$.widget.bridge('uibutton', $.ui.button)</script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Morris.js charts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="~/plugins/morris/morris.min.js"></script>
    <!-- Sparkline -->
    <script src="~/plugins/sparkline/jquery.sparkline.min.js"></script>
    <!-- jvectormap -->
    <script src="~/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js"></script>
    <script src="~/plugins/jvectormap/jquery-jvectormap-world-mill-en.js"></script>
    <!-- jQuery Knob Chart -->
    <script src="~/plugins/knob/jquery.knob.js"></script>
    <!-- daterangepicker -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.2/moment.min.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- bootstrap color picker -->
    <script src="~/plugins/colorpicker/bootstrap-colorpicker.min.js"></script>
    <!-- datepicker -->
    <script src="~/plugins/datepicker/bootstrap-datepicker.js"></script>
    <!-- DataTables -->
    <script src="~/plugins/datatables/jquery.dataTables.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap4.js"></script>
    <!-- Persian Data Picker -->
    <script src="~/dist/js/persian-date.min.js"></script>
    <script src="~/dist/js/persian-datepicker.min.js"></script>
    <!-- iCheck 1.0.1 -->
    <script src="~/plugins/iCheck/icheck.min.js"></script>
    <!-- Bootstrap WYSIHTML5 -->
    <script src="~/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>
    <!-- Slimscroll -->
    <script src="~/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <!-- FastClick -->
    <script src="~/plugins/fastclick/fastclick.js"></script>
    <!-- Select2 -->
    <script src="~/plugins/select2/select2.full.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/dist/js/pages/dashboard.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <!-- CK Editor -->
    <script src="~/plugins/ckeditor/ckeditor.js"></script>
    <script src="~/js/jquery-confirm.min.js"></script>
    <script src="~/js/site.js"></script>
    <!-- pdf -->

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.22/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>


    @RenderSection("Scripts", required: false)
</body>

</html>