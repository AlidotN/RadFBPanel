@model VmMainInfo


<!-- Sidebar user panel (optional) -->
<div class="user-panel mt-3 pb-3 mb-3 d-flex">
    <div class="image">
        @if (string.IsNullOrEmpty(Model.UserPic))
        {
            <img src="~/dist/img/no_avatar.jpg" class="img-circle elevation-2" alt="User Image">
        }else
        {
            <img src="~/uploads/img/@Model.UserPic" class="img-circle elevation-2" alt="User Image">
        }
    </div>
    <div class="info">
        <a href="#" class="d-block">@Model.FullName</a>
    </div>
</div>