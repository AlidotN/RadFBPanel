            animationBounce: 1.5,
            buttons: {

                confirm: {
                        text: '@Texts.Yes',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteFrequently", "frequently", new { id = "myID" })'.replace("myID", id);
                    }
                },
                cancel: {
                        text: '@Texts.No',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
    }

         function Edit(id) {
             $.ajax({
                type: "POST",
                url: '@Url.Action("EditStatus", "frequently")',//  this for calling the web method function in controller.
