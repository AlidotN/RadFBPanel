@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RadFBApp.Models.Data.Tbl_FrequentlyAskedQuestions
@{
    ViewData["Title"] = "EditFrequently";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Texts.FrequentlyQuestions</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">@Texts.Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="frequently">@Texts.FrequentlyQuestions</a></li>
                        <li class="breadcrumb-item active">@Texts.ToEdit</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                @Texts.FrequentlyQuestions
                            </h3>
                        </div><!-- /.card-header -->
                        <form role="form" method="post" asp-action="EditFrequently" asp-controller="frequently">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="type">@Texts.Category</label>
                                            <select asp-for="fk_SubjectID" asp-items="ViewBag.Frequently" class="form-control select2">
                                                <option>@Texts.Choose</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="question">@Texts.Question</label>
                                            <input asp-for="prQuestion" type="text" class="form-control" id="question"
                                                   value="@Model.prQuestion" placeholder="@Texts.DesiredQuestion">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="questionEn">@Texts.EnQuestion</label>
                                            <input asp-for="EnQuestion" type="text" class="form-control" id="questionEn"
                                                   value="@Model.EnQuestion" placeholder="@Texts.DesiredQuestion">
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label for="answer">@Texts.AnswerToQuestion</label>
                                            <textarea asp-for="prAnswer" id="editor1"  style="width: 100%">@Model.prAnswer</textarea>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label for="answerEn">@Texts.EnAnswetToQuestion</label>
                                            <textarea asp-for="EnAnswer" id="editor2" 
                                                      style="width: 100%">@Model.EnAnswer</textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <a asp-action="Index" asp-controller="frequently" class="btn btn-primary">@Texts.BackToList</a>
                                <button type="submit" class="btn btn-success">@Texts.Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{
    <script>
        $(function () {
            ClassicEditor
                .create(document.querySelector('#editor1'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                })
            ClassicEditor
                .create(document.querySelector('#editor2'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                })
        })
    </script>
}

