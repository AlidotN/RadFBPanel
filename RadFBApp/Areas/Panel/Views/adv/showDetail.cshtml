@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RadFBApp.Models.ViewModels.Admin.VmDetailAdv
@{
    ViewData["Title"] = "showDetail";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Texts.Advs</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">@Texts.Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="adv">@Texts.Advs</a></li>
                        <li class="breadcrumb-item active">@Texts.ToEdit</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                @Texts.RegisteredAdv
                            </h3>
                        </div><!-- /.card-header -->
                        <form role="form">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="tele">@Texts.RegisteredName</label>
                                            <input asp-for="name" type="text" class="form-control" id="accessName"
                                                   disabled placeholder="@Texts.FillName">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Date</label>
                                            <input asp-for="date" disabled type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Time</label>
                                            <input asp-for="time" disabled type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Gender</label>
                                            <input asp-for="gender" disabled type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.MilitaryStatus</label>
                                            <input asp-for="mss" disabled type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Category</label>
                                            <input asp-for="categoty" disabled type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Grade</label>
                                            <input asp-for="grade" disabled type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Salary</label>
                                            <input asp-for="salary" disabled type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Skill</label>
                                            <input asp-for="skiils" disabled type="text" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Experience</label>
                                            <input asp-for="expriense" disabled type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Country</label>
                                            <input asp-for="country" disabled type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Province</label>
                                            <input asp-for="province" disabled type="text" class="form-control" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.WorkTime</label>
                                            <input asp-for="cooper" disabled type="text" class="form-control" />
                                        </div>
                                    </div>



                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.Title</label>
                                            <input asp-for="title" type="text" class="form-control" id="accessName"
                                                   disabled placeholder="عنوان" />
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.AdvStatus </label>
                                          
                                                @if (Model.status == true)
                                                {
                                                <input value="@Texts.Accepted" type="text" class="form-control" id="accessName"
                                                       disabled placeholder="@Texts.Title" />
                                                }
                                                else
                                                {
                                                <input value="@Texts.NotAccepted" type="text" class="form-control" id="accessName"
                                                       disabled placeholder="@Texts.Title" />
                                                }
                                            
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>@Texts.AdvOwner</label>
                                         
                                                @if (Model.type == true)
                                                {
                                                <input value="@Texts.Employer" type="text" class="form-control" id="accessName"
                                                       disabled placeholder="@Texts.Title" />
                                                }
                                                else
                                                {
                                                <input value="@Texts.Employee" type="text" class="form-control" id="accessName"
                                                       disabled placeholder="@Texts.Title" />
                                                }
                                          
                                        </div>
                                    </div>


                                </div>


                            </div>


                            <!-- /.card-body -->



                            <div class="card-footer">
                                <a asp-action="Index" asp-controller="adv" class="btn btn-primary">@Texts.BackToList</a>
                                @*<button type="submit" class="btn btn-success">@Texts.Edit</button>*@
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
