@model IEnumerable<RadFBApp.Models.ViewModels.Admin.VmUserAccess>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "UserAccessList";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>@Texts.Access</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">@Texts.Home</a></li>
                        <li class="breadcrumb-item active">@Texts.AddedAccesses</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <a class="btn btn-sm btn-success col-lg-2 offset-2" asp-action="AddUserAccess" asp-controller="Account">
                                <i class="fa fa-plus"
                                   aria-hidden="true"></i>
                                @Texts.ToAdd
                            </a>
                            <button class="btn btn-sm btn-primary col-lg-2 offset-1">
                                <i class="fa fa-search"
                                   aria-hidden="true"></i> @Texts.Search
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Texts.Info</h3>
                    </div>

                    <div class="alert-success">@TempData["seccessDelete"]</div>
                    <div class="alert-danger">@TempData["FailedDelete"]</div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="info-table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="action">@Texts.Action</th>
                                    <th class="table-row">@Texts.Row</th>
                                    <th>@Texts.Name</th>
                                    <th>@Texts.EnglishName</th>
                                    <th>@Texts.Search</th>
                                    <th>@Texts.Users</th>
                                    <th>@Texts.ForbiddenWords</th>
                                    <th>@Texts.Posts</th>
                                    <th>@Texts.PremiumPackages</th>
                                    <th>@Texts.FinanceWorks</th>
                                    <th>@Texts.Questions</th>
                                    <th>@Texts.Advs</th>
                                    <th>@Texts.Reports</th>
                                    <th>@Texts.Crit_Sug</th>
                                    <th>@Texts.Access</th>
                                    <th>@Texts.AdminPanel</th>
                                    <th>@Texts.DeleteInfo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {

                                    i++;

                                    <tr>
                                        <td class="text-center">
                                            <a asp-controller="Account" asp-action="EditUserAccess" asp-route-id="@item.userAccessID" class="btn btn-sm btn-primary white-text" title="@Texts.Edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            <button id="@item.userAccessID" onclick="Delete(this.id);" data-id="@item.userAccessID" class="btn btn-sm btn-danger white-text" title="@Texts.Delete">
                                                <i class="fa fa-trash"></i>
                                            </button>
                                        </td>
                                        <td>@i</td>
                                        <td class="text-center">
                                            @item.userAccessTitle
                                            @*@ViewBag.AccessTitle = @item.userAccessTitle*@
                                        </td>
                                        <td class="text-center">
                                            @item.userAccessTitleEN
                                        </td>
                                        <td class="text-center">
                                            @if (item.setting == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }

                                        </td>
                                        <td class="text-center">
                                            @if (item.users == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.UnauthorizedWords == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.posts == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.permiumPackage == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.financialDepartment == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.questions == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.adv == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.reports == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.criticsAndSuggestions == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.userAccessMenu == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.usersAdminPanel == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (item.deleteInformation == true)
                                            {
                                                <i class="fa fa-check"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-ban"></i>
                                            }
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->



<script type="text/javascript">


    function Delete(Id) {
      //  var url = $(this).attr("id");
       // alert(Id);
        $.confirm({
            title: '@Texts.Delete',
            content: '@Texts.SureToDelete',
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: '@Texts.Yes',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteUserAccess", "Account", new { id = "myID" })'.replace("myID", Id);
                    }
                },
                cancel: {
                    text: '@Texts.No',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
    }
</script>