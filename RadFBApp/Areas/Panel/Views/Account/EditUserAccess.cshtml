@model RadFBApp.Models.ViewModels.Admin.VmUserAccess
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditUserAccess";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Texts.Accesses</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">@Texts.Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="UserAccessList" asp-controller="Account">@Texts.Accesses</a></li>
                        <li class="breadcrumb-item active">@Texts.ToEdit</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="alert-success">@TempData["EditSuccess"]</div>
            <div class="alert-danger">@TempData["EditFailed"]</div>
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                @Texts.AccessInPanel
                            </h3>
                        </div><!-- /.card-header -->
                        <form role="form" asp-action="EditUserAccess" asp-controller="Account" method="post">
                            <div class="card-body">
                                <input type="hidden" asp-for="@Model.userAccessID" />
                                <div class="row">
                                    <div class="col-lg-4 access-name">
                                        <div class="form-group">
                                            <label for="tele">@Texts.Name</label>
                                            <input asp-for="@Model.userAccessTitle" type="text" class="form-control" id="accessName"
                                                   placeholder="@Texts.AccessName">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.setting" type="checkbox" class="flat-red">
                                                @Texts.Setting
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.users" type="checkbox" class="flat-red">
                                                @Texts.Users
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.UnauthorizedWords" type="checkbox" class="flat-red">
                                                @Texts.ForbiddenWords
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.posts" type="checkbox" class="flat-red">
                                                @Texts.Posts
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.permiumPackage" type="checkbox" class="flat-red">
                                                @Texts.PremiumPackages
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.financialDepartment" type="checkbox" class="flat-red">
                                                @Texts.FinanceWorks
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.questions" type="checkbox" class="flat-red">
                                                @Texts.Questions
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="adv" type="checkbox" class="flat-red">
                                                @Texts.Advs
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="reports" type="checkbox" class="flat-red">
                                                @Texts.Reports
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.criticsAndSuggestions" type="checkbox" class="flat-red">
                                                @Texts.Crit_Sug
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.userAccessMenu" type="checkbox" class="flat-red">
                                                @Texts.Access
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.usersAdminPanel" type="checkbox" class="flat-red">
                                                @Texts.AdminPanel
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.deleteInformation" type="checkbox" class="flat-red">
                                                @Texts.DeleteInfo
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a asp-action="UserAccessList" asp-controller="Account" class="btn btn-primary">@Texts.BackToList</a>
                                <button type="submit" class="btn btn-success">@Texts.Edit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
