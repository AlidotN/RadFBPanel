@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RadFBApp.Models.Data.Tbl_guild
@{
    ViewData["Title"] = "EditGuild";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Texts.Guilds</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">@Texts.Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="guild">@Texts.Guilds</a></li>
                        <li class="breadcrumb-item active">@Texts.ToEdit</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                @Texts.GuildsInApp
                            </h3>
                        </div><!-- /.card-header -->

                        <div>@TempData["failedEdit"]</div>

                        <form role="form">
                            <div class="card-body">
                                <div class="row">
                                    <input type="hidden" asp-for="guildID" />

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="tele">@Texts.FaTitle</label>
                                            <input asp-for="FAguildNAme" type="text" class="form-control" id="faccessName"
                                                   placeholder="@Texts.DesiredName">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="tele">@Texts.EnTitle</label>
                                            <input asp-for="EnguildNAme" type="text" class="form-control" id="eaccessName"
                                                   placeholder="نام مورد نظر">
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label for="tele">@Texts.ChooseColor</label>
                                            <input type="text" asp-for="guildColor" class="form-control my-colorpicker1" autocomplete="off">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a href="index.html" type="submit" class="btn btn-primary">@Texts.BackToList</a>
                                <button type="submit" class="btn btn-success">@Texts.Edit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{
    <script>
        $(function () {
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-purple',
                radioClass: 'iradio_flat-purple'
            })
        });
        //Colorpicker
        $('.my-colorpicker1').colorpicker();
    </script>
}