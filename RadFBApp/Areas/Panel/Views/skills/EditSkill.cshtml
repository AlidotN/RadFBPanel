@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RadFBApp.Models.Data.Tbl_Skills
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">@Texts.Skills</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">@Texts.Home</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="skills">@Texts.Skills</a></li>
                        <li class="breadcrumb-item active">@Texts.ToEdit</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                @Texts.SkillsInApp
                            </h3>

                        </div><!-- /.card-header -->

                        <div class="alert-danger">@TempData["failedEdit"]</div>

                        <form role="form" asp-action="EditSkill" asp-controller="skills" method="post">
                            <div class="card-body">
                                <div class="row">
                                    <input asp-for="SkillID" type="hidden" />
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="tele">@Texts.FaTitle</label>
                                            <input asp-for="PrSkillTitle" type="text" class="form-control" id="FAccessName"
                                                   placeholder="@Texts.DesiredName" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="tele">@Texts.EnTitle</label>
                                            <input asp-for="EnSkillTitle" type="text" class="form-control" id="EAccessName"
                                                   placeholder="@Texts.DesiredName" required>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a asp-action="Index" asp-controller="skills" type="submit" class="btn btn-primary">@Texts.BackToList</a>
                                <button type="submit" class="btn btn-success">@Texts.Submit</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
