@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model radFB.db.Tbl_usersQuestions
@{
    ViewData["Title"] = "showDetail";
    Layout = "~/Views/Shared/Layout.cshtml";
    radFB.Classes.publicFunctions func = new radFB.Classes.publicFunctions();

    string currenetUser = "";
    if (User.Identity.IsAuthenticated)
    {
        currenetUser = User.Identity.Name;
    }
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">سوالات کاربران</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="usersQuestions">سوالات کاربران</a></li>
                        <li class="breadcrumb-item active">جزییات</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                سوال کاربر
                            </h3>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <p class="name">
                                        <label class="lbl" for="name">نام کاربر:</label>
                                        <label class="lbl-info" for="name">@func.fullName(Model.fk_userID)</label>
                                    </p>
                                    <p class="mobile">
                                        <label class="lbl" for="mobile">شماره موبایل:</label>
                                        <label class="lbl-info" for="mobile">@func.phoneNumber(Model.fk_userID)</label>
                                    </p>
                                    <p class="title">
                                        <label class="lbl" for="title">عنوان سوال:</label>
                                        <label class="lbl-info" for="title">@Model.usersQuestionsTitle</label>
                                    </p>
                                    <p class="text">
                                        <label class="lbl" for="text">متن سوال:</label>
                                        <label class="lbl-info" for="text">@Model.usersQuestionsText</label>
                                    </p>
                                </div>

                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                پاسخ
                            </h3>

                            @if (TempData["seccessDelete"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-check"></i> توجه!</h6>
                            @TempData["seccessDelete"]
                        </div>
                    }
                            @if (TempData["FailedDelete"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-ban"></i> توجه!</h6>
                            @TempData["FailedDelete"]
                        </div>
                    }
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <p class="name">
                                        <label class="lbl" for="name">پاسخ دهنده:</label>
                                        <label class="lbl-info" for="name">@func.adminName(Model.fk_admin)</label>
                                    </p>
                                    <p class="mobile">
                                        <label class="lbl" for="mobile">متن پاسخ:</label>
                                        <label class="lbl-info" for="mobile">
                                          @Html.Raw(@Model.QuestionAnswerText)
                                        </label>
                                    </p>
                                    <button id="@Model.usersQuestionsID" onclick="Delete(this.id);" class="btn btn-sm btn-danger white-text" title="حذف">
                                        <i class="fa fa-trash"></i>حذف پاسخ
                                    </button>
                                </div>

                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                پاسخ دادن
                            </h3>
                        </div><!-- /.card-header -->


                        <div class="alert-success">@TempData["successAdd"]</div>
                        <div class="alert-danger">@TempData["failedAdd"]</div>
                        <form role="form" method="post" asp-action="AddAnswer" asp-controller="usersQuestions">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="mb-3">
                                            <label for="answer">نوشتن پاسخ سوال</label>
                                            <textarea id="editor1" name="answer"
                                                      style="width: 100%"></textarea>
                                        </div>
                                        <input type="hidden" value="@Model.usersQuestionsID" name="id" />
                                        <input type="hidden" value="@currenetUser" name="admin" />
                                        <input type="hidden" value="@Model.usersQuestionsText" name="question" />
                                    </div>
                                    <div class="col-12">
                                        <label for="frequently">ثبت به عنوان سوال متداول</label>
                                        <input type="checkbox" class="flat-red" value="true" name="add" >
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <a asp-action="Index" asp-controller="usersQuestions" class="btn btn-primary">بازگشت به لیست</a>
                                <button type="submit" class="btn btn-success">ثبت پاسخ</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{
    <script>

        $(function () {
            ClassicEditor
                .create(document.querySelector('#editor1'))
                .then(function (editor) {
                    // The editor instance
                })
                .catch(function (error) {
                    console.error(error)
                });
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-purple',
                radioClass: 'iradio_flat-purple'
            });
        })




 function Delete(id) {
      //  var url = $(this).attr("id");
       // alert(Id);
        $.confirm({
            title: 'حذف',
            content: 'ایا از حذف این مورد اطمینان دارید؟',
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: 'بله',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteAnswer", "usersQuestions", new { id = "myID" })'.replace("myID", id);
                        }
                        },
                        cancel: {
                        text: 'خیر',
                        btnClass: 'btn-red',
                        action: function () {

                        }

                        }
                        }
           });
    }
    </script>
}