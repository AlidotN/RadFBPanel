@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model radFB.db.Tbl_dialog
@{
    ViewData["Title"] = "AddDialog";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">نوتیفیکیشن</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="notification">نوتیفیکیشن</a></li>
                        <li class="breadcrumb-item active">اضافه کردن</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                نوتیفیکیشن ها
                            </h3>
                        </div><!-- /.card-header -->
                        <form role="form" method="post" asp-action="AddDialog" asp-controller="notification">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="title">عنوان</label>
                                            <input asp-for="prnotificationTitle" type="text" class="form-control" id="title"
                                                   placeholder="عنوان مورد نظر">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="title">عنوان به انگلیسی</label>
                                            <input asp-for="enNotificationTitle" type="text" class="form-control" id="title"
                                                   placeholder="عنوان مورد نظر">
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="monthPrice">متن نوتیفیکیشن</label>
                                            <textarea asp-for="prNotificationText" class="form-control " id="notification_text"
                                                      placeholder="وارد کردن متن"></textarea>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <label for="monthPrice">متن نوتیفیکیشن به انگلیسی</label>
                                            <textarea asp-for="enNotificationText" class="form-control " id="notification_text"
                                                      placeholder="وارد کردن متن"></textarea>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <a asp-action="Index" asp-controller="notification" class="btn btn-primary">بازگشت به لیست</a>
                                <button type="submit" class="btn btn-success">ثبت</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
