@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";

    radFB.Classes.publicFunctions func = new radFB.Classes.publicFunctions();
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">داشبورد</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item active">خانه</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->


    <section class="content">
        <div class="container-fluid">
            <!-- Small boxes (Stat box) -->
            <div class="row">
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-info">
                        <div class="inner">
                            <h3>@ViewBag.postCount</h3>

                            <p>تعداد پست ها</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-upload"></i>
                        </div>
                        <a asp-action="Index" asp-controller="Post" class="small-box-footer">اطلاعات بیشتر <i class="fa fa-arrow-circle-left"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-success">
                        <div class="inner">
                            <h3>@ViewBag.advCount</h3>

                            <p>تعداد آگهی ها</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-ios-bell"></i>
                        </div>
                        <a asp-action="Index" asp-controller="adv" class="small-box-footer">اطلاعات بیشتر <i class="fa fa-arrow-circle-left"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>@ViewBag.userCount</h3>

                            <p>کاربران ثبت شده</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-person-add"></i>
                        </div>
                        <a asp-action="Index" asp-controller="appUsers" class="small-box-footer">اطلاعات بیشتر <i class="fa fa-arrow-circle-left"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@ViewBag.poster</h3>

                            <p>تعداد پوستر</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-pie-graph"></i>
                        </div>
                        <a href="#" class="small-box-footer">اطلاعات بیشتر <i class="fa fa-arrow-circle-left"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-warning">
                        <div class="inner">
                            <h3>@ViewBag.questionnarCount</h3>

                            <p>تعداد پرسشنامه ها</p>
                        </div>
                        <div class="icon">
                            <i class="ion ion-ios-list"></i>
                        </div>
                        <a asp-action="Index" asp-controller="questionnaire" class="small-box-footer">اطلاعات بیشتر <i class="fa fa-arrow-circle-left"></i></a>
                    </div>
                </div>
                <!-- ./col -->
                <div class="col-lg-4 col-6">
                    <!-- small box -->
                    <div class="small-box bg-danger">
                        <div class="inner">
                            <h3>@ViewBag.questionCount</h3>
                            <p>تعداد سوالات</p>
                        </div>
                        <div class="icon">
                            <i class="fa fa-question"></i>
                        </div>
                        <a asp-action="Index" asp-controller="question" class="small-box-footer">اطلاعات بیشتر <i class="fa fa-arrow-circle-left"></i></a>
                    </div>
                </div>
                <!-- ./col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title">گزارش ماهیانه</h5>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-tool dropdown-toggle" data-toggle="dropdown">
                                        <i class="fa fa-wrench"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-left" role="menu">
                                        <a href="#" class="dropdown-item">منو اول</a>
                                        <a href="#" class="dropdown-item">منو دوم</a>
                                        <a href="#" class="dropdown-item">منو سوم</a>
                                        <a class="dropdown-divider"></a>
                                        <a href="#" class="dropdown-item">لینک</a>
                                    </div>
                                </div>
                                <button type="button" class="btn btn-tool" data-widget="remove">
                                    <i class="fa fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <p class="text-center">
                                        <strong>نمودار فروش</strong>
                                    </p>

                                    <div class="chart">
                                        <!-- Sales Chart Canvas -->
                                        <canvas id="salesChart" height="180" style="height: 180px;"></canvas>
                                    </div>
                                    <!-- /.chart-responsive -->
                                </div>
                                <!-- /.col -->
                                <div class="col-md-4">
                                    <p class="text-center">
                                        <strong>میزان پیشرفت اهداف</strong>
                                    </p>

                                    <div class="progress-group">
                                        محصولات اضافه شده به سبد خرید
                                        <span class="float-left"><b>160</b>/200</span>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-primary" style="width: 80%"></div>
                                        </div>
                                    </div>
                                    <!-- /.progress-group -->

                                    <div class="progress-group">
                                        خرید انجام شده
                                        <span class="float-left"><b>310</b>/400</span>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-danger" style="width: 75%"></div>
                                        </div>
                                    </div>

                                    <!-- /.progress-group -->
                                    <div class="progress-group">
                                        <span class="progress-text">بازدید صفحات ویژه</span>
                                        <span class="float-left"><b>480</b>/800</span>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-success" style="width: 60%"></div>
                                        </div>
                                    </div>

                                    <!-- /.progress-group -->
                                    <div class="progress-group">
                                        سوالات ارسالی
                                        <span class="float-left"><b>250</b>/500</span>
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-warning" style="width: 50%"></div>
                                        </div>
                                    </div>
                                    <!-- /.progress-group -->
                                </div>
                                <!-- /.col -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- ./card-body -->
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-sm-3 col-6">
                                    <div class="description-block border-right">
                                        <span class="description-percentage text-success"><i class="fa fa-caret-up"></i> 17%</span>
                                        <h5 class="description-header">تومان 35,210.43</h5>
                                        <span class="description-text">کل گردش حساب</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-3 col-6">
                                    <div class="description-block border-right">
                                        <span class="description-percentage text-warning"><i class="fa fa-caret-left"></i> 0%</span>
                                        <h5 class="description-header">تومان 10,390.90</h5>
                                        <span class="description-text">فروش کل</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-3 col-6">
                                    <div class="description-block border-right">
                                        <span class="description-percentage text-success"><i class="fa fa-caret-up"></i> 20%</span>
                                        <h5 class="description-header">تومان 24,813.53</h5>
                                        <span class="description-text">سود کل</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                                <!-- /.col -->
                                <div class="col-sm-3 col-6">
                                    <div class="description-block">
                                        <span class="description-percentage text-danger"><i class="fa fa-caret-down"></i> 18%</span>
                                        <h5 class="description-header">1200</h5>
                                        <span class="description-text">اهداف</span>
                                    </div>
                                    <!-- /.description-block -->
                                </div>
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">آگهی های پر بازدید</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="adv-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>اطلاعات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in func.adv())
                                    {
                                        <tr>
                                            <td>
                                                @item
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- ./col -->
                <!-- ./col -->
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">سوال های پر بازدید</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="question-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>متن سوال</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in func.question())
                                    {
                                        <tr>
                                            <td>
                                                @item
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- ./col -->
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">پرسشنامه های پر بازدید</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="questionnarie-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>توضیح</th>
                                        <th>فایل</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in func.questionnair())
                                    {
                                        <tr>
                                            <td>
                                                @item.Title
                                            </td>
                                            <td class="text-center">
                                                <a href="@item.Address" class="btn btn-sm btn-primary white-text" title="مشاهده فایل">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- ./col -->
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">پروفایل های پر طرفدار</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="question-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>نام کاربر</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in func.users())
                                    {
                                        <tr>
                                            <td>
                                                @item
                                            </td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- ./col -->
            </div>
            <!-- /row-->
        </div>
        <!-- /.container-fluid -->
    </section>

</div>

