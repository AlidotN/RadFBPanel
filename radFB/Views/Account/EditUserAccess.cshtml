@model radFB.ViewModels.VmUserAccess
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "EditUserAccess";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">سطوح دسترسی</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item"><a asp-action="UserAccessList" asp-controller="Account">سطوح دسترسی</a></li>
                        <li class="breadcrumb-item active">ویرایش کردن</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            @if (TempData["EditSuccess"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-check"></i> توجه!</h6>
                            @TempData["EditSuccess"]
                        </div>
                    }
            @if (TempData["editFailed"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-ban"></i> توجه!</h6>
                            @TempData["editFailed"]
                        </div>
                    }
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                سطح دسترسی در پنل ادمین
                            </h3>
                        </div><!-- /.card-header -->
                        <form role="form" asp-action="EditUserAccess" asp-controller="Account" method="post">
                            <div class="card-body">
                                <input type="hidden" asp-for="@Model.userAccessID" />
                                <div class="row">
                                    <div class="col-lg-4 access-name">
                                        <div class="form-group">
                                            <label for="tele">نام</label>
                                            <input asp-for="@Model.userAccessTitle" type="text" class="form-control" id="accessName"
                                                   placeholder="نام سطح دسترسی">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.setting" type="checkbox" class="flat-red">
                                                تنظیمات
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="@Model.users" type="checkbox" class="flat-red">
                                                کاربران
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="groups" type="checkbox" class="flat-red">
                                                گروه ها
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="posts" type="checkbox" class="flat-red">
                                                آپلودهای کاربران
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="financialDepartment" type="checkbox" class="flat-red">
                                                اموری مالی
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="templates" type="checkbox" class="flat-red">
                                                قالب ها
                                            </label>
                                        </div>
                                    </div>

                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="reports" type="checkbox" class="flat-red">
                                                گزارشات
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="connectUsers" type="checkbox" class="flat-red">
                                                ارتباط با کاربران
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="frequently" type="checkbox" class="flat-red">
                                                سوالات متداول
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="usersAdminPanel" type="checkbox" class="flat-red">
                                                پنل ادمین
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-lg-4">
                                        <div class="form-group">
                                            <label>
                                                <input asp-for="deleteInformation" type="checkbox" class="flat-red">
                                                حذف اطلاعات
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <a asp-action="UserAccessList" asp-controller="Account" class="btn btn-primary">بازگشت به لیست</a>
                                <button type="submit" class="btn btn-success">ویرایش</button>
                            </div>
                        </form>
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
