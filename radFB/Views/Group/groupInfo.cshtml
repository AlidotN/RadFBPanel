@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model radFB.ViewModels.VmGroupInfo
@{
    ViewData["Title"] = "groupInfo";
    Layout = "~/Views/Shared/Layout.cshtml";

    radFB.Repository.repGroup rep = new radFB.Repository.repGroup();

    radFB.Classes.publicFunctions publicFunctions = new radFB.Classes.publicFunctions();
    bool roleID = publicFunctions.DeleteInformations(User.Identity.Name);
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">گروه ها</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Group">گروه ها</a></li>
                        <li class="breadcrumb-item active">جزییات</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Main row -->
            <div class="row">
                <!-- Left col -->
                <section class="col-lg-12 ">
                    <!-- Custom tabs (Charts with tabs)-->
                    <div class="card">
                        <div class="card-header d-flex p-0">
                            <h3 class="card-title p-3">
                                <i class="fa fa-gears mr-1"></i>
                                گروه ها
                            </h3>
                            <a asp-action="Index" asp-controller="Group" class="btn btn-primary btn-back">بازگشت به لیست</a>
                        </div><!-- /.card-header -->

                        @if (TempData["seccessDelete"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-check"></i> توجه!</h6>
                            @TempData["seccessDelete"]
                        </div>
                    }
                        @if (TempData["FailedDelete"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-ban"></i> توجه!</h6>
                            @TempData["FailedDelete"]
                        </div>
                    }


                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <p class="name">
                                        <label class="lbl" for="name">عنوان گروه:</label>
                                        <label class="lbl-info" for="name">@Model.GroupTitle</label>
                                    </p>
                                    <p class="title">
                                        <label class="lbl" for="title">توضیحات:</label>
                                        <label class="lbl-info" for="title">@Model.groupDescription</label>
                                    </p>
                                    <p class="title">
                                        <label class="lbl" for="title">کاربر ایجاد کننده:</label>
                                        <label class="lbl-info" for="title">@Model.creatorUser</label>
                                    </p>
                                    <p class="mobile">
                                        <label class="lbl" for="mobile">شماره موبایل:</label>
                                        <label class="lbl-info" for="mobile">@Model.phoneNumber</label>
                                    </p>
                                </div>

                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">اعضا</h3>
                            <div class="card-tools">
                                <span data-toggle="tooltip" title="تعداد داده ها" class="badge bg-success">

                                    تعداد
                                    : @ViewBag.memberCount
                                </span>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="info-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th class="action2">عملیات</th>
                                        <th class="table-row">ردیف</th>
                                        <th>نام کاربر</th>
                                        <th>شماره موبایل</th>
                                        <th>تعداد پیام</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 0;
                                        string userType = "";
                                        @foreach (var item in rep.gropMembersInformation(Model.groupID))
                                        {
                                            i++;
                                            <tr>
                                                <td class="text-center">
                                                    @{
                                                        userType = rep.userType(item.memberID);

                                                    }
                                                    @if (userType == "حقیقی")
                                                    {
                                                        <a asp-action="showRealClient" asp-controller="appUsers" asp-route-id="@item.memberID" class="btn btn-sm btn-primary white-text" title="مشاهده">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a asp-action="showLegalClient" asp-controller="appUsers" asp-route-id="@item.memberID" class="btn btn-sm btn-primary white-text" title="مشاهده">
                                                            <i class="fa fa-eye"></i>
                                                        </a>
                                                    }

                                                    @if (roleID == true)
                                                    {

                                                        <button id="" onclick="DeleteMember(@Model.groupID,@item.memberID);" class="btn btn-sm btn-danger white-text" title="حذف">
                                                            <i class="fa fa-trash"></i>
                                                        </button>

                                                    }
                                                </td>
                                                <td>@i</td>
                                                <td>@item.memberName</td>
                                                <td>@item.memberPhoneNumber</td>
                                                <td>@item.memberMessagesCount</td>
                                            </tr>

                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">پیام ها</h3>
                            <div class="card-tools">
                                <span data-toggle="tooltip" title="تعداد داده ها" class="badge bg-success">
                                    تعداد :
                                    @ViewBag.messageCount
                                </span>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="info-table" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th class="table-row">ردیف</th>
                                        <th class="action">عملیات</th>
                                        <th>کاربر ارسال کننده</th>
                                        <th>تاریخ</th>
                                        <th>ساعت</th>
                                        <th>متن پیام</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int ii = 0;
                                        foreach (var item in rep.gropMessageInformation(Model.groupID))
                                        {
                                            ii++;
                                            <tr>
                                                <td>@ii</td>
                                                <td class="text-center">
                                                    <button onclick="DeleteMessage(@Model.groupID,@item.messageId);" class="btn btn-sm btn-danger white-text"
                                                            title="حذف">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                </td>
                                                <td>@item.senderName</td>
                                                <td>@item.date</td>
                                                <td>@item.time</td>
                                                <td class="message-text">@item.messageText </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </section>
                <!-- /main col -->
            </div>
            <!-- /.row (main row) -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{
    <script>



        function DeleteMember(id, userId) {
      //  var url = $(this).attr("id");
       // alert(Id);
        $.confirm({
            title: 'حذف',
            content: 'ایا از حذف این مورد اطمینان دارید؟',
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: 'بله',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteMember", "Group")?id=' + id + '&userId=' + userId;
                    }
                },
                cancel: {
                    text: 'خیر',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
        }


         function DeleteMessage(id, messageID) {
      //  var url = $(this).attr("id");
            // alert(messageID);
        $.confirm({
            title: 'حذف',
            content: 'ایا از حذف این مورد اطمینان دارید؟',
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: 'بله',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteMessage", "Group")?id=' + id + '&messageID=' + messageID;
                    }
                },
                cancel: {
                    text: 'خیر',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
    }
    </script>
}