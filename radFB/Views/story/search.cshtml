@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<radFB.db.Tbl_story>
@{
    ViewData["Title"] = "search";
    Layout = "~/Views/Shared/Layout.cshtml";

    radFB.Classes.publicFunctions rep = new radFB.Classes.publicFunctions();

    radFB.Classes.publicFunctions publicFunctions = new radFB.Classes.publicFunctions();
    bool roleID = publicFunctions.DeleteInformations(User.Identity.Name);
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>استوری ها</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="story">استوری ها</a></li>
                        <li class="breadcrumb-item active">جست و جوی استوری</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex p-0">
                        <h3 class="card-title p-3">
                            <i class="fa fa-gears mr-1"></i>
                            پست های قرار گرفته در برنامه
                        </h3>
                    </div><!-- /.card-header -->
                    <form role="form" method="post" asp-action="search" asp-controller="Post">
                        <div class="card-body">
                            <div class="row">

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>از تاریخ</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                            <input name="date1" class="date-picker form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 offset-2">
                                    <div class="form-group">
                                        <label>تا تاریخ</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                            <input name="date2" class="date-picker form-control" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">جست و جو</button>
                        </div>
                    </form>
                </div>

                <div class="alert-danger">@TempData["Failed"]</div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">   نتایج</h3>
                        <div> @ViewBag.dt</div>
                        <div class="card-tools">
                            <span data-toggle="tooltip" title="تعداد داده ها" class="badge bg-success">
                                تعداد :
                                @ViewBag.count
                            </span>
                        </div>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="info-table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="select"></th>
                                    <th class="action">عملیات</th>
                                    <th class="table-row">ردیف</th>
                                    <th>ثبت کننده</th>
                                    <th>عکس</th>
                                    <th>تاریخ</th>
                                    <th>زمان</th>
                                    <th class="status">وضعیت</th>
                                </tr>
                            </thead>
                            @if (Model != null)
                            {


                                <tbody>
                                    @{
                                        int i = 0;
                                        @foreach (var item in Model)
                                        {
                                            i++;
                                            <tr>
                                                <td class="text-center"><input value="@item.storyID" type="checkbox" class="flat-red" name="DeleteCheck" id="DeleteCheck"></td>
                                                <td>
                                                    @*<a href="edit.html" class="btn btn-sm btn-primary white-text" title="ویرایش">
                                                            <i class="fa fa-edit"></i>
                                                        </a>*@
                                                    @if (roleID == true)
                                                    {
                                                        <button id="@item.storyID" onclick="Delete(this.id);" class="btn btn-sm btn-danger white-text" title="حذف">
                                                            <i class="fa fa-trash"></i>
                                                        </button>
                                                    }

                                                </td>
                                                <td>@i</td>
                                                <td>@rep.fullName(item.fk_userID)</td>
                                                <td><img src="~/uploads/@item.storyPicture" alt="عکس کاربر" class="img-rounded table-img"></td>
                                                <td>@item.stroryDate</td>
                                                <td>@item.storyTime</td>
                                                @*<td>@item.storyStatus</td>*@
                                                <td class="text-center">
                                                    @if (item.storyStatus == false)
                                                    {
                                                        <i class="fa fa-ban" title="عدم تایید"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa fa-check" title="منتشر شده"></i>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>

                            }

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section Scripts{
    <script>
        $(function () {
            $('#info-table').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    },
                    "search": "جست و جو : ",
                    "lengthMenu": "نمایش _MENU_ مورد در هر صفحه",
                    "emptyTable": "داده ای موجود نیست"
                },
                "info": false,
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": false,
                "autoWidth": false
            });
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-purple',
                radioClass: 'iradio_flat-purple'
            });
        });

        $('.flat-red').on("click", function () {
            var checkCount = $(".flat-red:checked").length;
            if (checkCount > 0) {
                $('#DeleteAll').removeAttr("disabled");
            }
            else {
                $('#DeleteAll').attr("disabled", "disabled");
            }

        });

        $('.date-picker').persianDatepicker({
            format: 'YYYY/MM/DD',
            initialValue: false,
        });

        var activity = "";
        var s = "";


        $('body').on('change', "input[name='DeleteCheck']", function () {

           var s = $(this).val();
            if ($(this).is(':checked')) {
                activity = activity + "," + $(this).val();
                s = "," + $(this).val();

            }
            else {

                activity = activity.replace("," + s, "");

            }

        });


        function DeleteAll() {
            var deleteItems = activity;

                  $.confirm({
            title: 'حذف',
            content: 'ایا از حذف این مورد اطمینان دارید؟',
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: 'بله',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteAllstories", "story", new { deleteItems = "items" })'.replace("items", deleteItems);
                    }
                },
                cancel: {
                    text: 'خیر',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
    }




         function Delete(id) {
      //  var url = $(this).attr("id");
       // alert(Id);
        $.confirm({
            title: 'حذف',
            content: 'ایا از حذف این مورد اطمینان دارید؟',
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: 'بله',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteStory", "story", new { id = "myID" })'.replace("myID", id);
                    }
                },
                cancel: {
                    text: 'خیر',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
    }
    </script>
}