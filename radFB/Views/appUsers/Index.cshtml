@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<radFB.ViewModels.VmRadfbUsers>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";

    radFB.Classes.publicFunctions publicFunctions = new radFB.Classes.publicFunctions();
    bool roleID = publicFunctions.DeleteInformations(User.Identity.Name);
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>اطلاعات کاربران</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item active">اطلاعات کاربران</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">اطلاعات</h3>
                        <div class="card-tools">
                            <span data-toggle="tooltip" title="تعداد داده ها" class="badge bg-success">تعداد : @ViewBag.userCount</span>
                        </div>
                    </div>
                    @if (TempData["seccessDelete"] != null)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-check"></i> توجه!</h6>
                            @TempData["seccessDelete"]
                        </div>
                    }
                    @if (TempData["FailedDelete"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h6><i class="icon fa fa-ban"></i> توجه!</h6>
                            @TempData["FailedDelete"]
                        </div>
                    }
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="info-table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>عملیات</th>
                                    <th class="table-row">ردیف</th>
                                    <th>تصویر کاربر</th>
                                    <th>نام کاربر</th>
                                    <th>موبایل</th>
                                    <th>ایمیل</th>
                                    <th>نوع کاربر</th>
                                    <th>آخرین ورود</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    long i = 0;
                                    foreach (var item in Model)
                                    {
                                        i++;

                                        <tr>
                                            <td class="text-center">
                                                @if (item.userType == "حقیقی")
                                                {
                                                    <a asp-action="showRealClient" asp-controller="appUsers" asp-route-id="@item.RadFbUserID" class="btn btn-sm btn-info white-text" title="مشاهده اطلاعات کامل">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                }
                                                else
                                                {
                                                    <a asp-action="showLegalClient" asp-controller="appUsers" asp-route-id="@item.RadFbUserID" class="btn btn-sm btn-info white-text" title="مشاهده اطلاعات کامل">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                }

                                                <a href="edit_user.html" class="btn btn-sm btn-primary white-text" title="ویرایش">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                @if (roleID == true)
                                                {
                                                    <button id="@item.RadFbUserID" onclick="Delete(this.id);" class="btn btn-sm btn-danger white-text" title="حذف">
                                                        <i class="fa fa-trash"></i>
                                                    </button>
                                                }

                                                <button id="@item.RadFbUserID" onclick="Block(this.id);" class="btn btn-sm btn-warning white-text" title="مسدود">
                                                    <i class="fa fa-hand-stop-o"></i>
                                                </button>
                                                <input type="hidden" id="blockStatus" value="@item.userStatus" />
                                            </td>
                                            <td>@i</td>
                                            <td><img src="~/uploads/@item.UserPic" alt="عکس کاربر" width="100" height="100" class="img-rounded table-img"></td>
                                            <td>@item.fullName</td>
                                            <td>@item.phoneNumber</td>
                                            <td>@item.email</td>
                                            <td>@item.userType</td>
                                            <td>@item.lastSeenDate</td>
                                        </tr>
                                    }
                                }


                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts{
    <script>


        $(function () {
            $('#info-table').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    },
                    "search": "جست و جو : ",
                    "lengthMenu": "نمایش _MENU_ مورد در هر صفحه",
                    "emptyTable": "داده ای موجود نیست"
                },
                "info": false,
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": false,
                "autoWidth": false
            });
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-purple',
                radioClass: 'iradio_flat-purple'
            });
        });

        function Delete(id) {
        $.confirm({
            title: 'حذف',
            content: 'ایا از حذف این مورد اطمینان دارید؟',
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: 'بله',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("DeleteUser", "appUsers", new { id = "myID" })'.replace("myID", id);
                    }
                },
                cancel: {
                    text: 'خیر',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
        }



        function Block(id) {

         var st = $('#blockStatus').val();

        var cont = '';
        if (st == "True") {
            cont = 'آیا از غیر فعال کردن کاربر مورد نظر اطمینان دارید؟';
        } else {
            cont = 'آیا از فعال کردن کاربر مورد نظر اطمینان دارید؟'
        }

        $.confirm({
            title: 'وضعیت کاربر',
            content: cont,
            theme: 'supervan',
            rtl: true,
            closeIcon: true,
            animationBounce: 1.5,
            buttons: {

                confirm: {
                    text: 'بله',
                    btnClass: 'btn-blue',
                    action: function () {
                        window.location.href = '@Url.Action("BlockUser", "appUsers", new { id = "myID" })'.replace("myID", id);
                    }
                },
                cancel: {
                    text: 'خیر',
                    btnClass: 'btn-red',
                    action: function () {

                    }

                }
            }
        });
        }




    </script>
}
