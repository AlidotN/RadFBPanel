@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<radFB.ViewModels.VmMessages>
@{
    ViewData["Title"] = "ShowAllMessages";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>پیام های کاربران</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item active">پیام های کاربران</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">اطلاعات</h3>
                        <div class="card-tools">
                            <span data-toggle="tooltip" title="تعداد داده ها" class="badge bg-success">تعداد : @ViewBag.MessagesCount</span>
                        </div>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="info-table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th class="table-row">ردیف</th>
                                    <th class="action">عملیات</th>
                                    <th>نام کاربر</th>
                                    <th>موبایل</th>
                                    <th>ایمیل</th>
                                    <th>تعداد صفحات پیام</th>
                                    <th>تعداد کل پیام ها</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    long i = 0;
                                    foreach (var item in Model)
                                    {
                                        i++;

                                        <tr>
                                            <td>@i</td>
                                            <td class="text-center">
                                                <a asp-action="ShowDetailMessages" asp-controller="appUsers" asp-route-id="@item.radfbUserID" class="btn btn-sm btn-primary white-text" title="مشاهده">
                                                    <i class="fa fa-eye"></i>
                                                </a>
                                            </td>
                                            <td>@item.FullName</td>
                                            <td>@item.PageNumbers</td>
                                            <td>@item.Email</td>
                                            <td>@item.PageNumbers</td>
                                            <td>@item.MessagesNumbers</td>
                                        </tr>
                                        }
                                    }
                                    </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->


@section Scripts{
    <script>


        $(function () {
            $('#info-table').DataTable({
                "language": {
                    "paginate": {
                        "next": "بعدی",
                        "previous": "قبلی"
                    },
                    "search": "جست و جو : ",
                    "lengthMenu": "نمایش _MENU_ مورد در هر صفحه",
                    "emptyTable": "داده ای موجود نیست"
                },
                "info": false,
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": false,
                "autoWidth": false
            });
            $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                checkboxClass: 'icheckbox_flat-purple',
                radioClass: 'iradio_flat-purple'
            });
        });
    </script>
}
