@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<radFB.ViewModels.VmQuestion>
@{
    ViewData["Title"] = "search";
    Layout = "~/Views/Shared/Layout.cshtml";

}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>سوال ها</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-left">
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Account">خانه</a></li>
                        <li class="breadcrumb-item"><a asp-action="Index" asp-controller="question">سوال ها</a></li>
                        <li class="breadcrumb-item active">جست و جوی سوال</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header d-flex p-0">
                        <h3 class="card-title p-3">
                            <i class="fa fa-gears mr-1"></i>
                            سوال های قرار گرفته در برنامه
                        </h3>
                    </div><!-- /.card-header -->
                    <form role="form" asp-action="search" asp-controller="question" method="post">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="tele">نام ثبت کننده</label>
                                        <input name="name" type="text" class="form-control" id="accessName"
                                               placeholder="وارد کردن نام">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>متن سوال</label>
                                        <input name="txt" type="text" class="form-control" id="accessName"
                                               placeholder="متن سوال شامل">
                                    </div>
                                </div>
                                <div class="col-lg-4 ">
                                    <div class="form-group">
                                        <label>موضوع ها</label>
                                        <select name="subject" asp-items="ViewBag.subject" class="form-control select2">
                                            <option>انتخاب کنید</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4 ">
                                    <div class="form-group">
                                        <label>دسته بندی شغلی</label>
                                        <select name="category" asp-items="ViewBag.subject" class="form-control select2">
                                            <option>انتخاب کنید</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>از تاریخ</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                            <input name="dt1" class="date-picker form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>تا تاریخ</label>
                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">
                                                    <i class="fa fa-calendar"></i>
                                                </span>
                                            </div>
                                            <input name="dt2" class="date-picker form-control" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label>تعداد پاسخ بیشتر از</label>
                                        <input name="answerCount" type="number" class="form-control" id="answerCount"
                                               value="0" placeholder="عدد مورد نظر">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">جست و جو</button>
                        </div>
                    </form>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">نتایج</h3>
                        <div class="card-tools">
                            <span data-toggle="tooltip" title="تعداد داده ها" class="badge bg-success">
                                تعداد :
                                @ViewBag.count
                            </span>
                        </div>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="info-table" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                  
                                    <th class="action">عملیات</th>
                                    <th class="table-row">ردیف</th>
                                    <th>ثبت کننده</th>
                                    <th>متن سوال</th>
                                    <th>تاریخ</th>
                                    <th>زمان</th>
                                    <th>تعداد پاسخ</th>
                                </tr>
                            </thead>
                            
                                @if (Model != null)
                                {
                                <tbody>
                                    @{
                                        int i = 0;
                                        @foreach (var item in Model)
                                        {
                                            i++;
                                            <tr>
                                                <td class="text-center">
                                                    <a asp-action="showDetail" asp-controller="question" asp-route-id="@item.ID" class="btn btn-sm btn-blue white-text" title="مشاهده">
                                                        <i class="fa fa-eye"></i>
                                                    </a>
                                                </td>
                                                <td>@i</td>
                                                <td>@item.name</td>
                                                <td>@item.textTitle</td>
                                                <td>@item.date</td>
                                                <td>@item.time</td>
                                                <td>@item.answerCount</td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            }
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->


    @section Scripts{
        <script>
            $(function () {
                $('#info-table').DataTable({
                    "language": {
                        "paginate": {
                            "next": "بعدی",
                            "previous": "قبلی"
                        },
                        "search": "جست و جو : ",
                        "lengthMenu": "نمایش _MENU_ مورد در هر صفحه",
                        "emptyTable": "داده ای موجود نیست"
                    },
                    "info": false,
                    "paging": true,
                    "lengthChange": true,
                    "searching": true,
                    "ordering": false,
                    "autoWidth": false
                });
                $('input[type="checkbox"].flat-red, input[type="radio"].flat-red').iCheck({
                    checkboxClass: 'icheckbox_flat-purple',
                    radioClass: 'iradio_flat-purple'
                });
            });


            $('.date-picker').persianDatepicker({
                format: 'YYYY/MM/DD',
                initialValue: false,
            });
        </script>


    }